{% render 'partials/head.liquid' %}

<section class="upperlayout">
  <div class="team-1">
    {% for teamchange in teamchanges reversed %}
      {% if forloop.index == 1 %}
        <h1 class="teamnaam">{{ teamchange.text }}</h1>
      {% else %}
        {% break %}
        <!-- De rest van de berichten na object 3 worden niet bekeken -->
      {% endif %}
    {% endfor %}

    <ul id="team"></ul>
  </div>

  <div class="voetbalveld"></div>

  <div class="team-jolly">
    <h2>Team {{teamName}}</h2>
    {% for ourTeamMember in ourTeamMembers %}
      {% comment %} <img src="https://fdnd.directus.app/assets/{{ person.mugshot }}?width=500" alt="{{ person.name }}"> {% endcomment %}
   <li class="fifa-kaart">
          <p class="id">{{ person.id }}</p>
          <img src="https://fdnd.directus.app/assets/{{ ourTeamMember.mugshot }}?width=500" alt="{{ ourTeamMember.name }}">
        </li>
    {% endfor %}
  </div>
</section>
<form method="POST" action="/">
  <input type="text" name="text" placeholder="Verzin een team naam" required>

  <button type="submit">opslaan</button>
</form>

<h1>Selecteer Speler</h1>

